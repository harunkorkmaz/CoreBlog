@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using EntityLayer.Concrete
@model List<AppRole>

<div class="container">
    <div class="ibox ">
        <div class="ibox-content">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Name</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td><a href="/Admin/AdminRole/UpdateRole/@item.Id" class="btn btn-outline-warning">Update</a></td>
                            <td><a href="/Admin/AdminRole/DeleteRole/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/admin/adminrole/addrole" class="btn btn-outline-primary">Add New Role</a>
        </div>
    </div>
</div>

