@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Comments</h1>

@model List<EntityLayer.Concrete.Comment>

<div class="container">
    <div class="ibox ">
        <div class="ibox-content">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        @*<th></th>*@
                        <th>Blog Title</th>
                        <th>Title</th>
                        <th>Detail</th>
                        <th>Score</th>
                        <th>Date</th>
                        <th>Delete</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.CommentUserName</td>
                            @*<td><span class="pie">0.52,1.041</span></td>*@
                            <td>@item.Blog.BlogTitle</td>
                            <td>@item.CommentTitle</td>
                            <td>@item.CommentContent</td>
                            <td>@item.Score</td>
                            <td class="text-navy">@item.CommentDate.ToString("dd-MMM-yyyy")</td>
                            <td><a class="btn btn-outline-danger">Delete</a></td>
                            <td><a class="btn btn-outline-warning">Update</a></td>
                        </tr>

                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
