@using X.PagedList
@using EntityLayer.Concrete
@using X.PagedList.Mvc.Core

@model IPagedList<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <table class="table table-bordered">
            <tr>
                <th> Id </th>
                <th> Name </th>
                <th> Action </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.Id </td>
                    <td> @item.CategoryName </td>
                    <td>
                        <a href="#" class="btn btn-outline-primary"> activate </a>
                        <a href="/admin/category/delete/@item.Id" onclick="return confirm('Are you sure?');" class="btn btn-outline-danger"> Delete </a>
                        <a href="#" class="btn btn-success"> Action </a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="row">
        <div class="ml-auto">
            <a class="btn btn-info btn-lg" href="/Admin/Category/Add">Add</a>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="ml-auto">
            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new {page}))
        </div>
    </div>
</div>

