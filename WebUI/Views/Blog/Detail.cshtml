@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/Userlayout.cshtml";
}
@model EntityLayer.Concrete.Blog

<!--//banner-->
<section class="banner-bottom">
    <!--/blog-->
    <div class="container">
        <div class="row">
            <!--left-->
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                <div class="blog-grid-top">
                    <div class="b-grid-top">
                        <div class="blog_info_left_grid">
                            <a href="#">
                                <img src="@Model.BlogImage" class="img-fluid" alt="">
                            </a>
                        </div>
                        <div class="blog-info-middle">
                            <ul>
                                <li>
                                    <i class="far fa-calendar-alt"></i> @Model.CreatedDate.ToString("dd-MMMM-yyyy")
                                </li>
                                @* <li class="mx-2">
                                    <a href="#">
                                        <i class="far fa-thumbs-up"></i> - Likes
                                    </a>
                                </li> *@
                                <li>
                                    <a href="#">
                                        <i class="far fa-comment"></i> @ViewBag.CommentCount Comments
                                    </a>
                                </li>

                            </ul>
                        </div>
                    </div>

                    <h3>
                        <a href="single.html"> @Model.Title </a>
                    </h3>
                    <p>
                        @(String.IsNullOrEmpty(Model.Content) ? "No content" : Model.Content)
                    </p>
                </div>
                
                @await Component.InvokeAsync("CommentListByBlog", new { BlogId = Model.Id })

                @await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml")
            
            </div>

            <!--//left-->
            <!--right-->
            @await Html.PartialAsync("~/Views/Shared/BlogRightPanel.cshtml")
            <!--//right-->
        </div>
    </div>
</section>

<script>
    jQuery(document).ready(function ($) {
        $(".scroll").click(function (event) {
            event.preventDefault();
            $('html,body').animate({
                scrollTop: $(this.hash).offset().top
            }, 900);
        });
    });
</script>
<!--// end-smoth-scrolling -->

<script>
    $(document).ready(function () {
        $().UItoTop({
            easingType: 'easeOutQuart'
        });
    });
</script>
<a href="#home" class="scroll" id="toTop" style="display: block;">
    <span id="toTopHover" style="opacity: 1;"> </span>
</a>

