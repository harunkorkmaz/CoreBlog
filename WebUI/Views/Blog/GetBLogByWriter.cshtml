
@{
    ViewData["Title"] = "GetBLogByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
@using EntityLayer.Concrete
@model List<Blog>
@*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">*@

<h1>Your Blogs</h1>
<table class="table">
    <thead>
        <tr>
            <th @*class="col"*@>Id</th>
            <th @*class="col"*@>Title</th>
            <th @*class="col"*@>Date</th>
            <th @*class="col"*@>Category</th>
            <th @*class="col"*@>Status</th>
            <th @*class="col"*@></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogId</td>
                <td>@item.BlogTitle</td>
                <td>@item.BlogCreateDate</td>
                <td>@item.RCategory.CategoryName</td>
                <td>@(String.IsNullOrEmpty(@item.BlogContent) ? "No Content" : @item.BlogContent.Substring(0, 90))...</td>
                <td>
                    <a class="btn btn-warning" href="#">update</a>
                    <a class="btn btn-danger" href="#">delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-info" href="#">Add</a>

