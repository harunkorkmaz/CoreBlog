@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Userlayout.cshtml";
}
@using EntityLayer.Concrete
@model List<Blog>

<!--/main-->
<section class="container-fluid row" style="margin-right:50px;margin-left:50px;">
    <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
        <h3 class="tittle">Blog Posts</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="row my-4">
                            <div class="col-md-3">
                                <a href="#">
                                    <img src="@item.BlogImage" class="card-img-top img-fluid" alt="">
                                </a>
                            </div>
                            <div class="col-md-9">
                                <div class="card-body">
                                    <ul class="blog-icons my-4">
                                        <li>
                                            <a asp-action="Details" asp-route-id="@item.Id">
                                                <i class="far fa-calendar-alt"></i>  @(@item.CreatedDate == default(DateTime) ? "--/--/--" : ((DateTime)@item.CreatedDate).ToString("dd/MMM/yyyy"))
                                            </a>
                                        </li>
                                        <li class="mx-2">
                                            <a href="#">
                                                <i class="far fa-comment"></i> @(item.Category == null ? "" : @item.Category.CategoryName)
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fas fa-eye"></i> @item.BlogThumbnailImage
                                            </a>
                                        </li>
                                    </ul>
                                    <h5 class="card-title">
                                        <a href="#">@item.BlogTitle</a>
                                    </h5>
                                    <p class="card-text mb-3">
                                        @item.BlogContent.Substring(0, 130)...
                                    </p>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary read-m">Read More</a>
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
        @await Html.PartialAsync("~/Views/Home/HomeRightPanel.cshtml")

</section>


<!--//main-->
